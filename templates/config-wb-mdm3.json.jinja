{% set INPUTS_NUMBER = 6 -%}
{% set OUTPUTS_NUMBER = 3 -%}

{
    "title": "WB-MDM3_template_title",
    "device_type": "WB-MDM3",
    "group": "g-wb",
    "device": {
        "name": "WB-MDM3",
        "id": "wb-mdm3",
        "max_read_registers": 0,
        "response_timeout_ms": 1,
        "frame_timeout_ms": 8,
        "enable_wb_continuous_read": true,

        "groups": [
            {
                "title": "Inputs",
                "id": "inputs",
                "order": 1
            },
            {% for index in range(1, OUTPUTS_NUMBER + 1) -%}
            {
                "title": "Channel {{index}}",
                "id": "channel_{{index}}",
                "order": {{1 + index}}
            },
            {% endfor -%}
            {
                "title": "General",
                "id": "general",
                "order": 5
            },
            {
                "title": "HW Info",
                "id": "hw_info",
                "order": 6
            },
            {
                "title": "Debug",
                "id": "debug",
                "order": 7
            }
        ],

        "parameters": {
            {% for index in range(0, OUTPUTS_NUMBER) -%}
            "inputs{{(index * 2) + 1}}{{(index * 2) + 2}}_mode": {
                "title": "Inputs {{(index * 2) + 1}}-{{(index * 2) + 2}} Mode",
                "address": {{16 + index}},
                "reg_type": "holding",
                "enum": [0, 1, 2],
                "default": 0,
                "enum_titles": [
                    "control disabled",
                    "channel {{index + 1}}: 1-button control",
                    "channel {{index + 1}}: 2-button control"
                ],
                "group": "inputs",
                "order": {{index + 1}}
            },
            {% endfor -%}
            {% for index in range(1, OUTPUTS_NUMBER + 1) -%}
            "channel{{index}}_dimming_curve": {
                "title": "Channel {{index}} Dimming Curve",
                "address": {{50 + (index - 1)}},
                "reg_type": "holding",
                "enum": [0, 1, 2],
                "default": 0,
                "enum_titles": [
                    "LED lamp or incandescent lamp (logarithmic)",
                    "resistive load (linear)",
                    "switching mode (on/off)"
                ],
                "group": "channel_{{index}}",
                "order": 1
            },
            "channel{{index}}_dimming_type": {
                "title": "Channel {{index}} Dimming Type",
                "address": {{60 + (index - 1)}},
                "reg_type": "holding",
                "enum": [0, 1],
                "default": 0,
                "enum_titles": [
                    "leading edge (motors, fans, incandescent lamps)",
                    "trailing edge (LED lamps)"
                ],
                "group": "channel_{{index}}",
                "order": 2
            },
            "channel{{index}}_min_value": {
                "title": "Channel {{index}} Min Value (us)",
                "description": "channel_min_value_description",
                "address": {{70 + (index - 1)}},
                "reg_type": "holding",
                "min": 0,
                "max": 9999,
                "default": 1000,
                "group": "channel_{{index}}",
                "order": 3
            },
            "channel{{index}}_max_value": {
                "title": "Channel {{index}} Max Value (us)",
                "description": "channel_max_value_description",
                "address": {{80 + (index - 1)}},
                "reg_type": "holding",
                "min": 0,
                "max": 9999,
                "default": 9999,
                "group": "channel_{{index}}",
                "order": 4
            },
            "channel{{index}}_increase_rate": {
                "title": "Channel {{index}} Increase Rate (ms/%)",
                "address": {{140 + (index - 1)}},
                "reg_type": "holding",
                "min": 1,
                "max": 100,
                "default": 10,
                "group": "channel_{{index}}",
                "order": 5
            },
            "channel{{index}}_decrease_rate": {
                "title": "Channel {{index}} Decrease Rate (ms/%)",
                "address": {{150 + (index - 1)}},
                "reg_type": "holding",
                "min": 1,
                "max": 100,
                "default": 10,
                "group": "channel_{{index}}",
                "order": 6
            },
            {% endfor -%}
            "baud_rate": {
                "title": "Baud rate",
                "description": "baud_rate_description",
                "address": 110,
                "reg_type": "holding",
                "enum": [96, 192, 384, 576, 1152],
                "default": 96,
                "enum_titles": [
                    "9600",
                    "19200",
                    "38400",
                    "57600",
                    "115200"
                ],
                "group": "general",
                "order": 1
            }
        },

        "channels": [
            {% for index in range(1 , INPUTS_NUMBER + 1) -%}
            {
                "name": "Input {{index}}",
                "reg_type": "discrete",
                "address": {{index - 1}},
                "type": "switch",
                "group": "inputs"
            },
            {
                "name": "Input {{index}} counter",
                "reg_type": "input",
                "address": {{32 + (index - 1)}},
                "type": "value",
                "group": "inputs"
            },
            {% endfor -%}
            {% for index in range(1, OUTPUTS_NUMBER + 1) -%}
            {
                "name": "K{{index}}",
                "reg_type": "coil",
                "address": {{index - 1}},
                "type": "switch",
                "group": "channel_{{index}}"
            },
            {
                "name": "Channel {{index}}",
                "reg_type": "holding",
                "address": {{index - 1}},
                "type": "range",
                "max": 100,
                "group": "channel_{{index}}"
            },
            {% endfor -%}
            {
                "name": "Serial",
                "type": "text",
                "reg_type": "input",
                "address": 270,
                "format": "u32",
                "group": "hw_info"
            },
            {
                "name": "FW Version",
                "reg_type": "input",
                "address": 250,
                "type": "text",
                "format": "string",
                "string_data_size": 16,
                "enabled": false,
                "group": "hw_info"
            },
            {
                "name": "Supply voltage",
                "reg_type": "input",
                "address": 121,
                "type": "voltage",
                "scale": 0.001,
                "enabled": false,
                "group": "hw_info"
            },
            {
                "name": "Uptime",
                "reg_type": "input",
                "address": 104,
                "type": "text",
                "format": "u32",
                "enabled": false,
                "group": "hw_info"
            },
            {
                "name": "MCU Temperature",
                "reg_type": "input",
                "address": 124,
                "type": "temperature",
                "format": "s16",
                "scale": 0.1,
                "enabled": false,
                "group": "hw_info"
            },
            {
                "name": "MCU Voltage",
                "reg_type": "input",
                "address": 123,
                "scale": 0.001,
                "type": "voltage",
                "enabled": false,
                "group": "hw_info"
            },
            {
                "name": "AC on L-N",
                "reg_type": "input",
                "address": 97,
                "type": "switch",
                "group": "general"
            },
            {
                "name": "Overcurrent",
                "reg_type": "input",
                "address": 100,
                "type": "switch",
                "group": "general"
            },
            {% for index in range(1, OUTPUTS_NUMBER + 1) -%}
            {
                "name": "Channel {{index}} Raw Duty (us)",
                "reg_type": "holding",
                "address": {{90 + (index - 1)}},
                "readonly": true,
                "enabled": false,
                "group": "debug"
            },
            {% endfor -%}
            {
                "name": "Zero-Сross Offset (us)",
                "reg_type": "input",
                "address": 98,
                "enabled": false,
                "group": "debug"
            },
            {
                "name": "Last AC Voltage Period (us)",
                "reg_type": "input",
                "address": 99,
                "enabled": false,
                "group": "debug"
            }
        ],
        "translations": {
            "en": {
                "WB-MDM3_template_title": "WB-MDM3 (3-channel MOSFET dimmer)",
                "channel_min_value_description": "Raw dimmer value corresponding to minimum brightness (1%)",
                "channel_max_value_description": "Raw dimmer value corresponding to maximum brightness (100%)",
                "baud_rate_description": "Make sure that communication with device is established before changing this parameter. Select required baud rate, save configuration and then change port baud rate to the same value.",
                "Uptime": "Uptime (s)"
            },
            "ru": {
                "WB-MDM3_template_title": "WB-MDM3 (3-канальный диммер)",
                "Inputs": "Входы",
                {% for index in range(1 , INPUTS_NUMBER + 1) -%}
                "Input {{index}}": "Вход {{index}}",
                "Input {{index}} counter": "Счетчик {{index}}",
                {% endfor -%}

                {% for index in range(1, OUTPUTS_NUMBER + 1) -%}
                "Channel {{index}}": "Канал {{index}}",
                "Inputs {{(index * 2) - 1}}-{{index * 2}} Mode": "Режим работы входов {{(index * 2) - 1}}-{{index * 2}}",
                "channel {{index}}: 1-button control": "1-кнопочный режим",
                "channel {{index}}: 2-button control": "2-кнопочный режим",
                "Channel {{index}} Dimming Curve": "Кривая диммирования канала {{index}}",
                "Channel {{index}} Dimming Type": "Режим диммирования канала {{index}}",
                "Channel {{index}} Min Value (us)": "Нижний порог диммирования канала {{index}} (мкс)",
                "Channel {{index}} Max Value (us)": "Верхний порог диммирования канала {{index}} (мкс)",
                "Channel {{index}} Increase Rate (ms/%)": "Скорость увеличения яркости канала {{index}} (мс/%)",
                "Channel {{index}} Decrease Rate (ms/%)": "Скорость уменьшения яркости канала {{index}} (мс/%)",
                "Channel {{index}} Raw Duty (us)": "Сырое задание для канала {{index}} (мкс)",
                {% endfor -%}

                "General": "Общее",
                "HW Info": "Данные модуля",
                "Debug": "Диагностика",
                "control disabled": "управление отключено",
                "LED lamp or incandescent lamp (logarithmic)": "лампа светодиодная или накаливания (логарифмическая кривая яркости)",
                "resistive load (linear)": "резистивная нагрузка (линейная кривая яркости)",
                "switching mode (on/off)": "ключевой режим",
                "leading edge (motors, fans, incandescent lamps)": "по переднему фронту (моторы, вентиляторы, лампы накаливания)",
                "trailing edge (LED lamps)": "по заднему фронту (светодиодные лампы)",
                "channel_min_value_description": "Сырое задание для канала, соответствующее минимальной яркости (1%)",
                "channel_max_value_description": "Сырое задание для канала, соответствующее максимальной яркости (100%)",
                "Baud rate": "Скорость обмена",
                "baud_rate_description": "Перед изменением параметра убедитесь, что связь с устройством установлена. Выберите нужную скорость обмена, сохраните конфигурацию, а затем укажите в настройках порта эту же скорость.",
                "Serial": "Серийный номер",
                "FW Version": "Версия прошивки",
                "Supply voltage": "Напряжение питания",
                "Uptime": "Время работы с момента включения (с)",
                "MCU Temperature": "Температура МК",
                "MCU Voltage": "Напряжение питания МК",
                "AC on L-N": "Напряжение на клеммах L-N",
                "Overcurrent": "Перегрузка по току",
                "Zero-Сross Offset (us)": "Смещение от перехода напряжения через ноль (мкс)",
                "Last AC Voltage Period (us)": "Длительность последнего периода переменного напряжения (мкс)"
            }
        }
    }
}
